{
  "manifest_version": 3,
  "name": "Pitt Grad Gatherer",
  "short_name": "pitt-grad-gatherer",
  "version": "1.0.0",
  "description": "An extension that lets Pitt students submit (and discover) events for grad students on campus.",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_popup": "index.html?#/popup",
    "default_title": "Pitt Grad Gatherer"
  },
  "options_page": "index.html?#/options",
  "content_scripts": [
    {
      "js": [
        "contentPage.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
